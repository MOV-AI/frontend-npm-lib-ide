{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build/",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es6",
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2017", "dom"],
    "types": ["node"]
  },
  "include": ["./src/"]
}
